                                    <script>



                                    function add(id,name,longitude,latitude){
                                        $('#table tbody').append('<tr><td id=id'+id+'>'+id+'</td><td id=name'+id+'>'+name+'</td><td id=lon'+id+'>'+longitude+'</td><td id=lat'+id+'>'+latitude+'</td></tr>');

                                    }


                                    </script>

